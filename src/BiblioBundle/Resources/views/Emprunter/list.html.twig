{% extends 'base.html.twig' %}
{% block body %}
    <h1>Liste des Emprunts</h1>
    <table border = "1" class="table table-striped">
        <tr>
            <th>Id_Emprunt</th>
            <th>Date emprunt</th>
            <th>Date Retour</th>
            <th>Email Emprunteur</th>
            <th>Nom Document</th>
        </tr>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.date_emp|date('Y-m-d') }}</td>
                <td>{{ emprunt.date_retour|date('Y-m-d') }}</td>
                <td>{{ emprunt.emprunteur.email }}</td>
                <td>{{ emprunt.Document_emprunte.nom }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                <td><a class ="btn btn-success" href = "{{ path ("admin_UpdateEmprunt" ,{'id': emprunt.id })}}"> modifier </a></td>
                <td><a class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de supprimer cet emprunt?');" href = "{{ path ("biblio_supprimer_emprunt" ,{'id': emprunt.id })}}"> Supprimer </a></td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
