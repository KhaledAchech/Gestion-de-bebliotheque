{% extends 'base.html.twig' %}
{% block body %}
    <h1>Liste des Documents</h1>
    <table border = "1" class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date</th>
            <th>Auteur</th>
            <th>Type</th>
        </tr>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.nom }}</td>
                <td>{{ document.date|date('Y-m-d') }}</td>
                <td>{{ document.auteur }}</td>
                <td>{{ document.type }}</td>
                <td><a class="btn btn-dark" href = "{{ path ("biblio_emprunter_document" ,{'id': document.id })}}"> emprunter </a></td>
                <td><a class ="btn btn-success" href = "{{ path ("biblio_modifier_docuement" ,{'id': document.id })}}"> modifier </a></td>
                <td><a class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de supprimer cet document?');" href = "{{ path ("biblio_supprimer_docuement" ,{'id': document.id })}}"> Supprimer </a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}