<h1>Connexion</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('biblio_connexion_user') }}" method="post">
    <div>
        <input placeholder="Adresse email ..." required name="_username" value="{{lastUsername}}" type="text">
    </div>
    <div>
        <input placeholder="Mot de passe ..." required name="_password" type="password">
    </div>
    <div>
        <button type="submit">Connexion</button>
    </div>

</form>