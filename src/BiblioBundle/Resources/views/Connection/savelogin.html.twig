{% extends 'base.html.twig' %}
{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('biblio_connexion_user') }}" method="post">
        <div class="form-group">
            <input placeholder="Adresse email ..." required name="_username" value="{{lastUsername}}" type="text">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." required name="_password" type="password">
        </div>
        <div class="form-group">
            <button type="submit" class ="btn btn-success">Connexion</button>
        </div>

    </form>
{% endblock %}

